rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Barangay logos - only authenticated super admins can upload
    match /barangay-logos/{fileName} {
      allow read: if true; // Anyone can read logos
      allow write: if request.auth != null 
                   && request.auth.token.isSuperAdmin == true
                   && request.resource.size < 5 * 1024 * 1024 // Max 5MB
                   && request.resource.contentType.matches('image/.*');
    }

    // Payment proof screenshots - residents can upload, staff can read
    match /payment-proofs/{fileName} {
      allow read: if request.auth != null; // Authenticated users can read
      allow write: if request.auth != null 
                   && request.resource.size < 5 * 1024 * 1024 // Max 5MB
                   && request.resource.contentType.matches('image/.*');
    }

    // Default: deny all other access
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
